{
    "info": {
        "name": "Floria Auth API",
        "description": "Authentication APIs for Floria App",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://127.0.0.1:8001"
        }
    ],
    "item": [
        {
            "name": "1. Signup - Local Account",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"123456\",\n  \"email\": \"test@example.com\",\n  \"phoneNumber\": \"0901234567\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/signup",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "signup"
                    ]
                }
            }
        },
        {
            "name": "2. Request OTP",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"userId\": 1,\n  \"method\": \"email\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/otp/request",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "otp",
                        "request"
                    ]
                }
            }
        },
        {
            "name": "3. Verify OTP",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"userId\": 1,\n  \"otp\": \"123456\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/otp/verify",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "otp",
                        "verify"
                    ]
                }
            }
        },
        {
            "name": "4. Login - Local Account",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"identifier\": \"testuser\",\n  \"password\": \"123456\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/login",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "login"
                    ]
                }
            }
        },
        {
            "name": "5. Google Login",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"idToken\": \"YOUR_GOOGLE_ID_TOKEN_HERE\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/google",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "google"
                    ]
                }
            }
        }
    ]
}